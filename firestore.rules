service cloud.firestore {
  match /databases/{database}/documents {
    match /shopping-list/{shoppingListId} {
      allow create: if request.auth.uid != null && request.auth.uid in request.resource.data.owner_uids;
      allow read: if request.auth.uid in resource.data.owner_uids;

      match /items/{itemId} {
        allow read, create, delete: if request.auth.uid in get(/databases/$(database)/documents/shopping-list/$(shoppingListId)).data.owner_uids;
      }
    }
  }
}
