service cloud.firestore {
  match /databases/{database}/documents {
    match /shopping-list/{shoppingListId} {
      allow create: if request.auth.uid != null && request.resource.data.owner_uid == request.auth.uid;
      allow read: if resource.data.owner_uid == request.auth.uid;

      match /items/{itemId} {
        allow read, create: if get(/databases/$(database)/documents/shopping-list/$(shoppingListId)).data.owner_uid == request.auth.uid;
      }
    }
  }
}
